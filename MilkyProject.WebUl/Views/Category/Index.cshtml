@model List<MilkyProject.WebUl.Dtos.ResultCategoryDto>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="styleheet" />

<div class="container">
    <br /> <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <<th>Sil</th>
            <<th>Güncelle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.categoriaId</td>
                <td>@item.categoriaName</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </table>
    <a href="#" class="btn btn-success">Yeni Kategori</a>

</div>
